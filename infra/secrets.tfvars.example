# ========================================
# 機密情報（ローカル実行用）
# ========================================
#
# このファイルをコピーして secrets.tfvars を作成してください：
#   cp secrets.tfvars.example secrets.tfvars
#
# secrets.tfvars は .gitignore で除外されています。
#
# ローカルでの実行：
#   terraform plan -var-file=environments/production.tfvars -var-file=secrets.tfvars
#
# ========================================

# Provider API Tokens
cloudflare_api_token = "your-cloudflare-api-token"
vercel_api_token     = "your-vercel-api-token"

# Better Auth
better_auth_secret = "your-better-auth-secret"  # openssl rand -base64 32

# GitHub OAuth App
auth_github_id     = "your-github-oauth-app-id"
auth_github_secret = "your-github-oauth-app-secret"
